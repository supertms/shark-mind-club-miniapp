/* 颜色变量 */
:root {
  --primary-yellow: #FFED00;
  --primary-pink: #FF6B9D;
  --bg-black: #000000;
  --bg-dark: #1a1a1a;
  --bg-card: #2a2a2a;
  --text-white: #ffffff;
  --text-gray-300: #d1d5db;
  --text-gray-400: #9ca3af;
  --text-gray-500: #6b7280;
  --text-gray-600: #4b5563;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, var(--primary-yellow), #ffd700);
  color: #000000;
  border-radius: 12rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.btn-secondary {
  background-color: var(--bg-card);
  color: var(--text-white);
  border-radius: 12rpx;
  border: 1rpx solid #374151;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.btn-secondary:active {
  background-color: #374151;
}

/* 卡片样式 */
.card {
  background-color: var(--bg-card);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 12rpx;
}

.card-gradient {
  background: linear-gradient(135deg, var(--bg-card), #1a1a1a);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 12rpx;
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background-color: var(--bg-dark);
  border-radius: 16rpx;
  max-width: 90%;
  max-height: 90%;
  overflow: hidden;
  position: relative;
}

/* 输入框样式 */
.input {
  background-color: var(--bg-card);
  border: 1rpx solid #374151;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  color: var(--text-white);
  font-size: 28rpx;
}

.input:focus {
  border-color: var(--primary-yellow);
}

/* 标签样式 */
.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.badge-primary {
  background-color: var(--primary-yellow);
  color: #000000;
}

.badge-secondary {
  background-color: var(--bg-card);
  color: var(--text-gray-300);
  border: 1rpx solid #374151;
}

/* 头像样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-white);
}

.avatar-gradient {
  background: linear-gradient(135deg, #eab308, #f97316);
}

/* 图标按钮 */
.icon-btn {
  width: 88rpx;
  height: 88rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  transition: all 0.2s ease;
}

.icon-btn:active {
  transform: scale(0.95);
}

/* 列表项样式 */
.list-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #374151;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list-item:last-child {
  border-bottom: none;
}

/* Toast样式 */
.toast {
  position: fixed;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: var(--bg-dark);
  color: var(--text-white);
  padding: 20rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  z-index: 2000;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #374151;
  border-top: 4rpx solid var(--primary-yellow);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-state-icon {
  font-size: 120rpx;
  color: var(--text-gray-500);
  margin-bottom: 20rpx;
}

.empty-state-text {
  color: var(--text-gray-400);
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.empty-state-subtext {
  color: var(--text-gray-500);
  font-size: 24rpx;
}

/* 响应式工具类 */
.container {
  max-width: 750rpx;
  margin: 0 auto;
  padding: 0 32rpx;
}

@media (max-width: 750rpx) {
  .container {
    padding: 0 24rpx;
  }
}

/* 工具类 */
.text-truncate {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.d-flex {
  display: flex;
}

.d-block {
  display: block;
}

.d-none {
  display: none;
}

.justify-content-center {
  justify-content: center;
}

.justify-content-between {
  justify-content: space-between;
}

.align-items-center {
  align-items: center;
}

.w-100 {
  width: 100%;
}

.h-100 {
  height: 100%;
}

.m-0 { margin: 0; }
.p-0 { padding: 0; }