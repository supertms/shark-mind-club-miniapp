/* pages/profile/index.wxss */
@import "../../styles/common.wxss";

/* 主容器 */
.container {
  height: 100vh;
  background-color: #000000;
  color: #ffffff;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 已登录状态 */
.logged-in-view {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 用户信息头部 */
.user-header {
  background-color: #000000;
  padding: 96rpx 32rpx 32rpx 32rpx;
  border-bottom: 2rpx solid #374151;
  flex-shrink: 0;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #8b5cf6, #ec4899);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  overflow: hidden;
  position: relative;
  transition: opacity 0.2s ease;
}

.avatar-btn:active .avatar {
  opacity: 0.8;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-text {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: bold;
}

.user-details {
  flex: 1;
}

.user-name {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.user-name-input {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  padding: 0;
  background: transparent;
  border: none;
  width: 100%;
  line-height: 1.5;
}

.user-name-input::placeholder {
  color: #6b7280;
}

.user-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-id {
  color: #9ca3af;
  font-size: 28rpx;
}

.settings-btn {
  background-color: #2a2a2a;
  border: 2rpx solid #374151;
  border-radius: 16rpx;
  padding: 8rpx 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  transition: all 0.2s ease;
}

.settings-btn:active {
  background-color: #374151;
}

.settings-icon {
  font-size: 24rpx;
}

.settings-text {
  color: #9ca3af;
  font-size: 24rpx;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  padding: 32rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 菜单列表 */
.menu-list {
  margin-bottom: 48rpx;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.menu-item {
  background-color: #1a1a1a;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  transition: all 0.2s ease;
  width: 100%;
  box-sizing: border-box;
}

.menu-item:active {
  background-color: #2a2a2a;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  display: block;
}

.menu-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.menu-status {
  color: #6b7280;
  font-size: 24rpx;
}

.menu-arrow {
  color: #4b5563;
  font-size: 32rpx;
}

/* 评价区域 */
.evaluations-section {
  background-color: #1a1a1a;
  border-radius: 32rpx;
  padding: 40rpx;
  border: 2rpx solid #374151;
}

.evaluations-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.evaluations-title {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
}

.evaluations-count {
  color: #9ca3af;
  font-size: 24rpx;
}

.evaluations-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.evaluation-item {
  background-color: #2a2a2a;
  border-radius: 24rpx;
  padding: 32rpx;
}

.evaluation-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.evaluation-type {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
}

.evaluation-badge {
  background-color: rgba(255, 237, 0, 0.2);
  border: 2rpx solid #FFED00;
  border-radius: 12rpx;
  padding: 4rpx 16rpx;
}

.badge-text {
  color: #FFED00;
  font-size: 20rpx;
  font-weight: bold;
}

.voters-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.voter-tag {
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 16rpx;
  padding: 8rpx 20rpx;
  color: #d1d5db;
  font-size: 22rpx;
}

/* 未登录状态 */
.not-logged-in-view {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 32rpx;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.background-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 1));
}

.welcome-content {
  position: relative;
  z-index: 10;
  width: 100%;
  max-width: 600rpx;
  padding: 0 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 欢迎标题 */
.welcome-title {
  margin-bottom: 64rpx;
  text-align: center;
}

.welcome-title text {
  color: #ffffff;
  font-size: 60rpx;
  font-weight: bold;
}

/* 功能预览 */
.features-preview {
  width: 100%;
  margin-bottom: 64rpx;
}

.feature-item {
  background-color: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(255, 237, 0, 0.3);
  border-radius: 32rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.feature-icon {
  width: 72rpx;
  height: 72rpx;
  background-color: #FFED00;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  flex-shrink: 0;
}

.feature-info {
  flex: 1;
}

.feature-title {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.feature-subtitle {
  color: #9ca3af;
  font-size: 24rpx;
  display: block;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  max-width: 400rpx;
  background: linear-gradient(135deg, #FFED00, #FFD700);
  color: #000000;
  border: none;
  border-radius: 32rpx;
  padding: 28rpx;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  transition: all 0.2s ease;
  box-shadow: 0 8rpx 24rpx rgba(255, 237, 0, 0.3);
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 237, 0, 0.2);
}

.login-text {
  font-size: 36rpx;
  font-weight: bold;
}

.login-icon {
  font-size: 40rpx;
}


/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background-color: #1a1a1a;
  border-radius: 32rpx;
  max-width: 90%;
  overflow: hidden;
  position: relative;
  width: 600rpx;
}

.modal-header {
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid #374151;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

.modal-close {
  color: #6b7280;
  font-size: 48rpx;
  padding: 8rpx;
}

.modal-body {
  padding: 32rpx 40rpx;
}

/* 登录模态框 */
.login-modal {
  max-width: 500rpx;
}

.login-message {
  color: #d1d5db;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 48rpx;
  display: block;
}

.wechat-login-btn {
  width: 100%;
  background-color: #07C160;
  color: #ffffff;
  border: none;
  border-radius: 24rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-login-btn:active {
  background-color: #06AD56;
}

/* 设置模态框 */
.settings-modal {
  max-width: 550rpx;
}

.settings-message {
  color: #d1d5db;
  font-size: 28rpx;
  margin-bottom: 32rpx;
  display: block;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.setting-label {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
}

.cooldown-notice {
  background-color: #fef3c7;
  border: 2rpx solid #f59e0b;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 24rpx;
}

.cooldown-notice text {
  color: #92400e;
  font-size: 24rpx;
}

.setting-status {
  text-align: center;
  padding: 16rpx;
  background-color: #2a2a2a;
  border-radius: 12rpx;
}

.setting-status text {
  color: #d1d5db;
  font-size: 24rpx;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .user-header {
    padding: 80rpx 24rpx 24rpx 24rpx;
  }

  .avatar {
    width: 96rpx;
    height: 96rpx;
  }

  .avatar-text {
    font-size: 36rpx;
  }

  .content-scroll {
    padding: 24rpx;
  }

  .welcome-content {
    padding: 0 32rpx;
  }

  .welcome-title text {
    font-size: 48rpx;
  }

  .feature-item {
    padding: 24rpx;
  }

  .feature-icon {
    width: 64rpx;
    height: 64rpx;
    font-size: 32rpx;
  }

  .modal-content {
    width: 90%;
  }
}