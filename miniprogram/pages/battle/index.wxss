/* pages/battle/index.wxss */

.container {
  min-height: 100vh;
  background-color: #000000;
  display: flex;
  flex-direction: column;
}

/* 顶部横幅 */
.header-banner {
  position: relative;
  width: 100%;
  height: 200rpx;
  overflow: hidden;
}

.banner-bg-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.banner-bg {
  width: 100%;
  height: 100%;
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.9) 100%);
}

.banner-content {
  position: relative;
  z-index: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
}

.banner-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.banner-title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

/* 刷新按钮 */
.refresh-header {
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: flex-end;
}

.refresh-btn {
  background-color: #2a2a2a;
  color: #ffffff;
  border: 2rpx solid #4b5563;
  border-radius: 16rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  line-height: 1.5;
}

.refresh-btn::after {
  border: none;
}

/* 房间列表容器 */
.rooms-container {
  flex: 1;
  padding: 0 32rpx 32rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.loading-text {
  color: #9ca3af;
  font-size: 28rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  color: #9ca3af;
  font-size: 24rpx;
}

/* 房间列表 */
.rooms-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 房间项 */
.room-item {
  background-color: #1a1a1a;
  border-radius: 24rpx;
  border: 2rpx solid #374151;
  overflow: hidden;
  transition: all 0.3s ease;
}

.room-content {
  padding: 32rpx;
}

/* 房间头部 */
.room-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.room-table-number {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

.room-status-badge {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.room-status-badge.active {
  background-color: #10b981;
  color: #ffffff;
}

.room-status-badge.inactive {
  background-color: #6b7280;
  color: #ffffff;
}

/* 房间信息 */
.room-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.room-info-row {
  display: flex;
  align-items: center;
}

.room-info-label {
  color: #9ca3af;
  font-size: 26rpx;
  margin-right: 8rpx;
}

.room-info-value {
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 500;
}

/* 房间操作 */
.room-action {
  margin-top: 24rpx;
}

.join-btn {
  width: 100%;
  background-color: #FFED00;
  color: #000000;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.join-btn.disabled {
  background-color: #4b5563;
  color: #9ca3af;
}

.join-btn::after {
  border: none;
}
