  width: 100%;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.ranking-rules-header {
  padding: 48rpx;
  border-bottom: 2rpx solid #374151;
  flex-shrink: 0;
}

.ranking-rules-title-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.ranking-rules-icon {
  font-size: 60rpx;
}

.ranking-rules-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
}

.ranking-rules-subtitle {
  display: block;
  text-align: center;
  color: #9ca3af;
  font-size: 28rpx;
}

.ranking-rules-body {
  flex: 1;
  min-height: 0;
  width: 100%;
}

.ranking-rules-content {
  padding: 48rpx;
}

.ranking-rules-section {
  background-color: #2a2a2a;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  border: 2rpx solid rgba(255, 237, 0, 0.2);
}

.ranking-rules-section:last-of-type {
  margin-bottom: 0;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.section-icon {
  font-size: 40rpx;
}

.section-title {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}

.section-tag {
  color: #9ca3af;
  font-size: 24rpx;
  margin-left: auto;
}

.section-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.section-text {
  font-size: 28rpx;
  color: #d1d5db;
}

.text-normal {
  color: #d1d5db;
}

.text-bold {
  color: #ffffff;
  font-weight: 500;
}

.text-highlight {
  color: #FFED00;
  font-weight: bold;
}

.points-grid {
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  gap: 16rpx;
}

.points-grid-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.points-card {
  width: 100%;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #ffffff;
}

.points-card-first {
  background: linear-gradient(135deg, #eab308, #f97316);
}

.points-card-second {
  background: linear-gradient(135deg, #9ca3af, #6b7280);
}

.points-card-third {
  background: linear-gradient(135deg, #b45309, #92400e);
}

.points-value {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

.points-unit {
  font-size: 20rpx;
  line-height: 1;
  margin-top: 4rpx;
}

.points-label {
  font-size: 24rpx;
  color: #9ca3af;
}

.section-list-item {
  display: flex;
  gap: 16rpx;
  align-items: flex-start;
}

.list-dot {
  color: #FF6B9D;
  font-size: 28rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.list-dot-yellow {
  color: #FFED00;
  font-size: 28rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.list-content {
  flex: 1;
  font-size: 28rpx;
  color: #d1d5db;
  line-height: 1.6;
}

.section-description {
  display: block;
  font-size: 28rpx;
  color: #d1d5db;
  margin-bottom: 24rpx;
}

.ranking-rules-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.ranking-rules-list-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.ranking-number-badge {
  width: 40rpx;
  height: 40rpx;
  background-color: #FFED00;
  color: #000000;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.ranking-rules-tip {
  background: linear-gradient(135deg, rgba(255, 237, 0, 0.1), rgba(255, 107, 157, 0.1));
  border-radius: 24rpx;
  padding: 32rpx;
  border: 2rpx solid rgba(255, 237, 0, 0.3);
  display: flex;
  gap: 16rpx;
  align-items: flex-start;
  margin-top: 40rpx;
}

.tip-icon {
  font-size: 36rpx;
  flex-shrink: 0;
}

.tip-content {
  flex: 1;
  font-size: 24rpx;
  color: #d1d5db;
  line-height: 1.8;
}

.tip-highlight {
  color: #FFED00;
  font-weight: 500;
}

.tip-text {
  color: #d1d5db;
}

.ranking-rules-footer {
  padding: 48rpx;
  border-top: 2rpx solid #374151;
  flex-shrink: 0;
}

.ranking-rules-confirm-btn {
  width: 100%;
  background-color: #FFED00;
  color: #000000;
  border: none;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 28rpx;
  line-height: 1;
}

.ranking-rules-confirm-btn:active {
  background-color: #FFE500;
  opacity: 0.9;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .header-banner {
    height: 250rpx;
  }

  .banner-icon {
    font-size: 96rpx;
  }

  .banner-title {
    font-size: 60rpx;
  }

  .tab-container {
    padding: 24rpx 24rpx 12rpx 24rpx;
  }

  .rankings-container {
    padding: 0 24rpx;
  }

  .ranking-item {
    padding: 24rpx;
    margin-bottom: 16rpx;
  }

  .avatar {
    width: 80rpx;
    height: 80rpx;
  }

  .avatar-text {
    font-size: 28rpx;
  }

  .modal-content {
    width: 90%;
  }
}

