/* pages/ranking/index.wxss */
@import "../../styles/common.wxss";

/* 主容器 */
.container {
  height: 100vh;
  background-color: #000000;
  color: #ffffff;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-bottom: 160rpx; /* 为 tab bar 留出空间 */
}

/* 顶部横幅 */
.header-banner {
  position: relative;
  padding: 96rpx 48rpx;
  flex-shrink: 0;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.banner-bg-wrapper {
  position: absolute;
  inset: 0;
}

.banner-bg {
  width: 100%;
  height: 100%;
}

.banner-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(255, 107, 157, 0.9), rgba(255, 217, 61, 0.8), rgba(255, 237, 0, 0.9));
}

.banner-content {
  position: relative;
  z-index: 10;
  text-align: center;
}

.banner-icon {
  font-size: 120rpx;
  margin-bottom: 16rpx;
  display: block;
  line-height: 1;
}

.banner-title {
  font-size: 72rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  display: block;
  line-height: 1;
  margin-bottom: 16rpx;
}

/* 榜单说明按钮 */
.rules-btn {
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  font-size: 24rpx;
  padding: 16rpx 32rpx;
  z-index: 20;
  line-height: 1;
}

.rules-btn:active {
  background-color: rgba(0, 0, 0, 0.8);
}

/* 标签页容器 */
.tab-container {
  display: flex;
  gap: 16rpx;
  padding: 32rpx 48rpx;
  background-color: #1a1a1a;
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
}

.tab-item {
  flex: 1;
  padding: 16rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  background-color: #2a2a2a;
  color: #9ca3af;
  line-height: 1.2;
}

.tab-item.active {
  background-color: #FFED00;
  color: #000000;
}

.tab-item:active {
  opacity: 0.8;
}

.tab-text {
  display: block;
}

/* 我的排名区域 */
.my-ranking-section {
  flex-shrink: 0;
  padding: 32rpx 48rpx 24rpx 48rpx;
  width: 100%;
  box-sizing: border-box;
}

.my-ranking {
  background-color: transparent;
  border-radius: 0;
  padding: 0;
  margin: 0;
}

.my-ranking-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.my-avatar-container {
  position: relative;
  flex-shrink: 0;
}

.my-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #8b5cf6, #ec4899);
  display: flex;
  align-items: center;
  justify-content: center;
}

.my-avatar-text {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
}

.my-info {
  flex: 1;
  min-width: 0;
}

.my-name {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.my-stats {
  display: flex;
  align-items: center;
  gap: 0;
}

.my-points {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
}

.my-rank {
  color: #9ca3af;
  font-size: 24rpx;
}

/* 排行榜容器 */
.rankings-container {
  flex: 1;
  min-height: 0;
  width: 100%;
  box-sizing: border-box;
}

.rankings-list {
  padding: 0 48rpx 32rpx 48rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 排行榜项 */
.ranking-item {
  background-color: #1a1a1a;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.ranking-item:last-child {
  margin-bottom: 0;
}

.ranking-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

/* 头像容器 */
.avatar-container {
  position: relative;
  flex-shrink: 0;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #8b5cf6, #ec4899);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
}

/* 排名徽章 */
.rank-badge-wrapper {
  position: absolute;
  top: -4rpx;
  left: -4rpx;
}

.rank-medal {
  font-size: 32rpx;
  line-height: 1;
  transform: scale(1.5);
}

.medal-icon {
  display: block;
}

.rank-number {
  width: 40rpx;
  height: 40rpx;
  background-color: #FFED00;
  border-radius: 50%;
  border: 4rpx solid #000000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.rank-number-text {
  color: #000000;
  font-size: 20rpx;
  font-weight: bold;
  line-height: 1;
}

/* 玩家信息 */
.player-info {
  flex: 1;
  min-width: 0;
}

.player-name {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.stats-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.points-container {
  margin-bottom: 16rpx;
}

.points-text {
  color: #FFED00;
  font-size: 24rpx;
  font-weight: bold;
}

.games-text {
  color: #9ca3af;
  font-size: 24rpx;
}

/* 评价标签 */
.evaluation-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.evaluation-tag {
  background-color: #2a2a2a;
  border: 2rpx solid rgba(255, 237, 0, 0.3);
  border-radius: 8rpx;
  padding: 4rpx 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.tag-type {
  color: #d1d5db;
  font-size: 20rpx;
}

.tag-count {
  color: #FFED00;
  font-size: 20rpx;
  font-weight: bold;
}

/* 操作区域 */
.action-area {
  flex-shrink: 0;
}

.evaluate-btn {
  background-color: #FFED00;
  color: #000000;
  border: none;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  padding: 12rpx 24rpx;
  line-height: 1;
}

.evaluate-btn:active {
  background-color: #e6d600;
  opacity: 0.9;
}



/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background-color: #1a1a1a;
  border-radius: 32rpx;
  max-width: 90%;
  max-height: 80%;
  overflow: hidden;
  position: relative;
  width: 600rpx;
}

.modal-header {
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid #374151;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

.modal-close {
  color: #6b7280;
  font-size: 48rpx;
  padding: 8rpx;
}

.modal-body {
  padding: 32rpx 40rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

/* 评价项 */
.evaluation-item {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background-color: #2a2a2a;
  border-radius: 16rpx;
}

.evaluation-item:last-child {
  margin-bottom: 0;
}

.evaluation-type {
  color: #FFED00;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.evaluation-count {
  color: #9ca3af;
  font-size: 24rpx;
  margin-bottom: 16rpx;
  display: block;
}

.voters-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.voter-name {
  background-color: #374151;
  color: #d1d5db;
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.no-evaluations {
  text-align: center;
  padding: 48rpx;
  color: #6b7280;
  font-size: 28rpx;
}

/* 榜单说明模态框 */
.ranking-rules-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  box-sizing: border-box;
}

.ranking-rules-modal-content {
