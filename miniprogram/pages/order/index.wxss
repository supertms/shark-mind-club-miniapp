/* pages/order/index.wxss */
@import "../../styles/common.wxss";

/* 主容器 */
.container {
  height: 100vh;
  background-color: #000000;
  color: #ffffff;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 头部 */
.header {
  background-color: #1a1a1a;
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid #374151;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-shrink: 0;
}

.header-title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

.header-close {
  color: #9ca3af;
  font-size: 48rpx;
  padding: 8rpx;
}

/* 主内容 */
.main-content {
  flex: 1;
  display: flex;
  overflow: hidden;
  min-height: 0;
}

/* 分类侧边栏 */
.category-sidebar {
  width: 128rpx;
  background-color: #1a1a1a;
  border-right: 2rpx solid #374151;
  overflow-y: auto;
  flex-shrink: 0;
}

.category-item {
  width: 100%;
  padding: 24rpx 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom: 2rpx solid #374151;
  transition: all 0.2s ease;
}

.category-item.active {
  background-color: #FFED00;
}

.category-item.active .category-name {
  color: #000000;
  font-weight: 500;
}

.category-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.category-name {
  color: #9ca3af;
  font-size: 20rpx;
  text-align: center;
  line-height: 1.4;
}

.category-item.active .category-name {
  color: #000000;
}

/* 商品列表区域 */
.products-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  min-height: 0;
}

.products-list {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

/* 商品卡片 */
.product-card {
  background-color: #2a2a2a;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  display: flex;
  transition: all 0.2s ease;
}

.product-card:active {
  background-color: #333333;
}

.package-card {
  flex-direction: column;
}

/* 商品图片 */
.product-image {
  width: 192rpx;
  height: 192rpx;
  flex-shrink: 0;
  position: relative;
  overflow: hidden;
}

.package-image {
  width: 100%;
  height: 384rpx;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.image-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
}

/* 商品信息 */
.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
  padding: 20rpx;
}

.product-header {
  flex: 1;
  min-height: 0;
}

.product-name {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.package-name {
  font-size: 32rpx;
  white-space: normal;
}

.product-description {
  color: #9ca3af;
  font-size: 24rpx;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.package-description {
  font-size: 28rpx;
  line-height: 1.8;
  -webkit-line-clamp: 3;
}

/* 商品控制 */
.product-controls {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  margin-top: 16rpx;
}

.product-price {
  color: #FFED00;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.package-price {
  font-size: 36rpx;
}

/* 数量控制 */
.quantity-controls {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.quantity-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  padding: 0;
  line-height: 1;
}

.quantity-btn.minus {
  background-color: #374151;
  color: #ffffff;
}

.quantity-btn.plus {
  background-color: #FFED00;
  color: #000000;
}

.quantity-text {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  width: 64rpx;
  text-align: center;
}

/* 添加按钮 */
.add-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #FFED00;
  color: #000000;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  padding: 0;
  line-height: 1;
}

.package-add-btn {
  width: auto;
  height: 64rpx;
  padding: 0 48rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
}

/* 进行中订单 */
.orders-list {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

.order-card {
  background-color: #2a2a2a;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #374151;
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.order-time-info {
  flex: 1;
}

.order-time-label {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.order-time {
  color: #6b7280;
  font-size: 24rpx;
}

.order-status {
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  background-color: rgba(234, 179, 8, 0.2);
  color: #fbbf24;
  border: 2rpx solid rgba(234, 179, 8, 0.3);
}

.order-items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.order-item-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

.order-item-name {
  color: #d1d5db;
}

.order-item-variant {
  color: #6b7280;
  margin-left: 8rpx;
}

.order-item-quantity {
  color: #6b7280;
  margin-left: 16rpx;
}

.order-item-price {
  color: #FFED00;
}

.order-total {
  border-top: 2rpx solid #374151;
  padding-top: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order-total-label {
  color: #9ca3af;
  font-size: 28rpx;
}

.order-total-price {
  color: #FFED00;
  font-size: 36rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-orders,
.empty-products {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-text {
  color: #6b7280;
  font-size: 28rpx;
}

/* 底部购物车栏 */
.cart-bar {
  background-color: #2a2a2a;
  border-top: 2rpx solid #374151;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-shrink: 0;
}

.cart-summary {
  flex: 1;
}

.cart-total-info {
  margin-bottom: 8rpx;
}

.cart-label {
  color: #9ca3af;
  font-size: 24rpx;
  display: block;
}

.cart-total {
  color: #FFED00;
  font-size: 40rpx;
  font-weight: bold;
}

.cart-count {
  color: #6b7280;
  font-size: 28rpx;
}

.checkout-btn {
  background-color: #FFED00;
  color: #000000;
  border: none;
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 24rpx;
}

.checkout-btn:active {
  background-color: #e6d600;
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background-color: #1a1a1a;
  border-radius: 32rpx;
  max-width: 90%;
  overflow: hidden;
  position: relative;
  width: 600rpx;
}

.modal-header {
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid #374151;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.modal-title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

.modal-close {
  color: #6b7280;
  font-size: 48rpx;
  padding: 8rpx;
}

.modal-body {
  padding: 32rpx 40rpx;
}

/* 结算模态框 */
.checkout-items {
  margin-bottom: 32rpx;
}

.checkout-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #374151;
}

.checkout-item:last-child {
  border-bottom: none;
}

.checkout-item-name {
  color: #ffffff;
  font-size: 28rpx;
  flex: 1;
}

.checkout-item-quantity {
  color: #9ca3af;
  font-size: 28rpx;
  margin: 0 16rpx;
}

.checkout-item-price {
  color: #FFED00;
  font-size: 28rpx;
  font-weight: 500;
}

.checkout-total {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-top: 2rpx solid #374151;
  margin-bottom: 32rpx;
}

.checkout-total-label {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
}

.checkout-total-price {
  color: #FFED00;
  font-size: 48rpx;
  font-weight: bold;
}

.confirm-btn {
  width: 100%;
  background-color: #FFED00;
  color: #000000;
  border: none;
  border-radius: 24rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.confirm-btn:active {
  background-color: #e6d600;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .category-sidebar {
    width: 112rpx;
  }

  .category-name {
    font-size: 18rpx;
  }

  .products-list {
    padding: 16rpx;
  }

  .product-card {
    margin-bottom: 16rpx;
  }

  .product-image {
    width: 160rpx;
    height: 160rpx;
  }

  .package-image {
    height: 320rpx;
  }

  .cart-bar {
    padding: 24rpx;
  }

  .modal-content {
    width: 90%;
  }
}