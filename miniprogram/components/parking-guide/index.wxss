/* components/parking-guide/index.wxss */
.parking-guide-content {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

/* 头部 */
.parking-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 48rpx;
  border-bottom: 2rpx solid #374151;
  flex-shrink: 0;
  background-color: #1a1a1a;
}

.parking-title-section {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.parking-title-main {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: bold;
}

.parking-title-sub {
  color: #9ca3af;
  font-size: 28rpx;
  margin-top: 8rpx;
}

.parking-close-btn {
  color: #9ca3af;
  font-size: 48rpx;
  padding: 8rpx;
}

.parking-close-btn:active {
  color: #ffffff;
}

/* 内容滚动区域 */
.parking-content-scroll {
  flex: 1;
  min-height: 0;
  padding: 48rpx;
  box-sizing: border-box;
}

.parking-content-wrapper {
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

/* 停车场信息卡片 */
.parking-info-card {
  background-color: #2a2a2a;
  border-radius: 24rpx;
  padding: 40rpx;
  border: 2rpx solid #374151;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.parking-info-row {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.parking-icon-large {
  font-size: 48rpx;
  flex-shrink: 0;
}

.parking-info-content {
  flex: 1;
}

.parking-label-text {
  color: #9ca3af;
  font-size: 28rpx;
  margin-bottom: 8rpx;
  display: block;
}

.parking-value-text {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
}

/* 重要提示卡片 */
.parking-important-notes-card {
  background: linear-gradient(135deg, rgba(255, 237, 0, 0.1), rgba(255, 237, 0, 0.05));
  border: 2rpx solid rgba(255, 237, 0, 0.2);
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.parking-note-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.parking-note-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #FFED00;
  border-radius: 50%;
  flex-shrink: 0;
}

.parking-note-text-white {
  color: #ffffff;
  font-size: 28rpx;
  flex: 1;
  line-height: 1.6;
}

/* 停车指引区域 */
.parking-guide-images-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.parking-guide-section-title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

/* 指引步骤卡片 */
.parking-guide-step-card {
  background-color: #2a2a2a;
  border-radius: 24rpx;
  overflow: hidden;
}

.parking-guide-image-container {
  width: 100%;
  background-color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  min-height: 200rpx;
  box-sizing: border-box;
}

.parking-guide-image {
  width: 100%;
  height: auto;
  display: block;
  max-width: 100%;
}

.parking-guide-step-content {
  padding: 32rpx;
}

.parking-step-badge-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.parking-step-badge {
  background-color: #FFED00;
  color: #000000;
  font-size: 24rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.parking-step-description {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1.6;
}