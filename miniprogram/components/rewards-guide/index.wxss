/* components/rewards-guide/index.wxss */
.rewards-guide-content {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

/* 头部 */
.rewards-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 48rpx;
  border-bottom: 2rpx solid #374151;
  flex-shrink: 0;
  background-color: #1a1a1a;
}

.rewards-title {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: bold;
}

.rewards-close-btn {
  color: #9ca3af;
  font-size: 48rpx;
  padding: 8rpx;
}

.rewards-close-btn:active {
  color: #ffffff;
}

/* 内容滚动区域 */
.rewards-content-scroll {
  flex: 1;
  min-height: 0;
  padding: 48rpx;
  box-sizing: border-box;
}

.rewards-content-wrapper {
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

/* 奖励卡片通用样式 */
.rewards-card {
  background-color: #2a2a2a;
  border-radius: 24rpx;
  padding: 40rpx;
  border: 2rpx solid;
}

.rewards-card-yellow {
  border-color: rgba(255, 237, 0, 0.3);
}

.rewards-card-blue {
  border-color: rgba(59, 130, 246, 0.3);
}

.rewards-card-red {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.2), rgba(249, 115, 22, 0.2));
  border-color: rgba(239, 68, 68, 0.3);
}

.rewards-card-default {
  border-color: transparent;
}

/* 卡片头部 */
.rewards-card-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.rewards-card-icon {
  font-size: 48rpx;
}

.rewards-card-title {
  color: #FFED00;
  font-size: 36rpx;
  font-weight: bold;
}

.rewards-card-title-blue {
  color: #60a5fa;
}

.rewards-card-title-red {
  color: #f87171;
}

/* 奖励列表 */
.rewards-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.rewards-item {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.rewards-rank-badge {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.rewards-rank-1 {
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
}

.rewards-rank-2 {
  background: linear-gradient(135deg, #d1d5db, #9ca3af);
}

.rewards-rank-3 {
  background: linear-gradient(135deg, #fb923c, #ea580c);
}

.rewards-rank-number {
  color: #000000;
  font-size: 24rpx;
  font-weight: bold;
}

.rewards-item-icon {
  font-size: 36rpx;
  color: #FFED00;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.rewards-item-content {
  flex: 1;
}

.rewards-item-title {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.rewards-item-desc {
  color: #9ca3af;
  font-size: 28rpx;
  display: block;
}

/* 卡片底部提示 */
.rewards-card-footer {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #374151;
}

.rewards-card-footer-red {
  border-top-color: rgba(239, 68, 68, 0.3);
}

.rewards-card-tip {
  color: #9ca3af;
  font-size: 24rpx;
  line-height: 1.8;
}

/* 警告列表 */
.rewards-warning-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rewards-warning-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.rewards-warning-dot {
  color: #f87171;
  font-size: 28rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.rewards-warning-text {
  color: #ffffff;
  font-size: 28rpx;
  flex: 1;
  line-height: 1.6;
}

.rewards-highlight-yellow {
  color: #FFED00;
  font-weight: bold;
}

.rewards-highlight-red {
  color: #f87171;
  font-weight: bold;
}

/* 流程列表 */
.rewards-process-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.rewards-process-item {
  display: flex;
  gap: 24rpx;
}

.rewards-process-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: rgba(255, 237, 0, 0.2);
  color: #FFED00;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.rewards-process-text {
  color: #d1d5db;
  font-size: 28rpx;
  flex: 1;
  line-height: 1.6;
}