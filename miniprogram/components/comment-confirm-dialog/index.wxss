/* components/comment-confirm-dialog/index.wxss */

/* 对话框样式 */
.comment-confirm-dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.9);
  z-index: 3000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  box-sizing: border-box;
}

.comment-confirm-dialog-content {
  background-color: #1a1a1a;
  border-radius: 32rpx;
  padding: 48rpx;
  width: 100%;
  max-width: 480rpx;
  border: 2rpx solid #374151;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.comment-confirm-dialog-header {
  text-align: center;
  margin-bottom: 48rpx;
  width: 100%;
  box-sizing: border-box;
}

.comment-confirm-dialog-icon {
  width: 128rpx;
  height: 128rpx;
  background: linear-gradient(135deg, #eab308, #f97316);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 32rpx;
}

.like-icon-large {
  font-size: 64rpx;
  color: #ffffff;
}

.comment-confirm-dialog-title {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  display: block;
}

.comment-confirm-dialog-subtitle {
  color: #9ca3af;
  font-size: 28rpx;
  display: block;
}

.highlight {
  color: #ffffff;
  font-weight: 500;
}

.highlight-yellow {
  color: #FFED00;
  font-weight: bold;
  margin: 0 8rpx;
}

.comment-confirm-dialog-warning {
  background-color: #2a2a2a;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
  border: 2rpx solid rgba(255, 237, 0, 0.2);
  width: 100%;
  box-sizing: border-box;
}

.warning-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.warning-icon {
  color: #FFED00;
  font-size: 36rpx;
  flex-shrink: 0;
}

.warning-title {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
}

.warning-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.warning-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.warning-number {
  color: #FFED00;
  font-size: 24rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.warning-text {
  color: #d1d5db;
  font-size: 24rpx;
  line-height: 1.6;
  flex: 1;
}

.highlight-white {
  color: #ffffff;
  font-weight: 500;
}

.highlight-pink {
  color: #FF6B9D;
  font-weight: 500;
}

.comment-confirm-dialog-buttons {
  display: flex;
  gap: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.comment-confirm-dialog-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  text-align: center;
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
}

.comment-confirm-dialog-btn.cancel {
  background-color: #2a2a2a;
  color: #d1d5db;
  border: 2rpx solid #4b5563;
}

.comment-confirm-dialog-btn.confirm {
  background-color: #FFED00;
  color: #000000;
}
